<%- include('partials/header'); -%>
<h1>Home</h1>
<p><%=startingContent%></p>

<% postDataArr.forEach(post=> {%>
<h1><%=post.titlePost%></h1>
<p><%=truncate(post.bodyPost, 100)%><a href="/posts/+<%=post.titlePost%>"> Read More </a></p>
<% }); %>

<h3><a href="/compose"> Compose a new post </a></h3>
<%- include('partials/footer'); -%>


<% function truncate(str, n){ %>
<%  return (str.length > n) ? str.substr(0, n-1) + ' ...' : str; %>
<% }; %>
